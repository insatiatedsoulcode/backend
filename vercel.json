{
  "version": 2,
  "builds": [
    {
      "src": "./server.js", // Your main backend entry file
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)", // Match requests starting with /api/
      "dest": "server.js" // Route them to your server file
    },
    {
      "src": "/(.*)", // Optional: Catch-all for other routes if needed
      "dest": "server.js"
    }
  ]
}
